<!DOCTYPE html>
<html lang="en" ng-app="ONETUG">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - @Html.GroupName()</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/app")
</head>
<body>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.1/angular-sanitize.js"></script>
        <header>
        <div class="content-wrapper">
            <div class="float-left" style="padding-right: 20px">
                <a href="~/">
                    <img src="@Url.Content("~/images/onetug.png")" alt="@Html.GroupName() Logo" />
                </a>
            </div>
            <div class="float-left">
                <div class="float-right">
                    <h1>@Html.GroupTitle()</h1>
                </div>
                <div style="clear: both;"></div>
                <div class="float-right">
                    @*                    <section id="login">
                            @Html.Partial("_LoginPartial")
                        </section>*@
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Our story", "About", "Home")</li>
                            <li>@Html.ActionLink("The Team", "Team", "Home")</li>
                            <li>@Html.ActionLink("Contributors", "Contributors", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
            <div style="clear: both;"></div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            <article>
                @RenderBody()
            </article>
            <aside>
                @Html.Partial("_Tweet")
            </aside>
            <article>
                <div id="divSponsors" class="content-wrapper" style="width:100%" ng-controller="sponsorsController" ng-init="init('@Url.Content("~/api/sponsors")')">
                    <div>
                        <hgroup class="title"><h1>Our sponsors</h1></hgroup>
                        <div ng-repeat-start="sponsor in sponsors">
                            <a ng-href="{{sponsor.CompanyUrl}}" target="_blank">
                                <img style="float:left" ng-src="{{sponsor.ImageUrl}}" />
                            </a>
                            {{sponsor.Info}}
                        </div>
                        <p ng-repeat-end>&nbsp;</p>
                    </div>
                    <div style="clear: both"></div>
                </div>
            </article>
        </section>
    </div>
    <footer>
        @Html.Action("Contact", "Home")
        <script>
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                    (i[r].q = i[r].q || []).push(arguments)
                }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
            })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

            ga('create', 'UA-10607215-1', 'auto');
            ga('send', 'pageview');
        </script>
    </footer>

</body>
</html>
